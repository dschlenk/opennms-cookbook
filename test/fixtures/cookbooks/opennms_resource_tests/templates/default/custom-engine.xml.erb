<drools-engine>
    <rules>
<% if @rules -%>
<% Array(@rules).each do |rule| -%>
        <rule name="<%= rule[:name] %>" file="<%= rule[:file] %>">
            <enabled><%= rule[:enabled] || 'true' %></enabled>
            <% if rule[:description] -%>
            <description><%= rule[:description] %></description>
            <% end -%>
        </rule>
<% end -%>
<% else -%>
        <rule name="<%= @engine_name %>" file="<%= @rule_name %>.drl">
            <enabled>true</enabled>
        </rule>
<% end -%>
    </rules>
</drools-engine>
