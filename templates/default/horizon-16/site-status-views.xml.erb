<?xml version="1.0" encoding="UTF-8"?>
<site-status-view-configuration 
    xmlns:this="http://www.opennms.org/xsd/config/site-status-views" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.opennms.org/xsd/config/site-status-views http://www.opennms.org/xsd/config/site-status-views.xsd " 
    default-view="<%=@default_view[:name]%>">
  <views>
    <view name="<%=@default_view[:name]%>" >
      <rows>
        <% if !@default_view[:rows].nil? -%>
        <% @default_view[:rows].each do |hash| -%>
        <% hash.each do |k,v| -%> 
        <row-def label="<%=k%>">
          <category name="<%=v%>"/>
        </row-def>
        <% end -%>
        <% end -%>
        <% else -%>
        <row-def label="Routers">
          <category name="Routers"/>
        </row-def>
        <row-def label="Switches">
          <category name="Switches"/>
        </row-def>
        <row-def label="Servers">
          <category name="Servers"/>
        </row-def>
        <% end -%>
      </rows>
    </view>
  </views>
</site-status-view-configuration>
