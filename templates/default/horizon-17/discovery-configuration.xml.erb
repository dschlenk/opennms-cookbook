<discovery-configuration threads="<%= @threads %>" packets-per-second="<%= @pps %>"
	initial-sleep-time="<%= @init_sleep_ms %>" restart-sleep-time="<%= @restart_sleep_ms %>"
  <% if @foreign_source -%>
	retries="<%= @retries %>" timeout="<%= @timeout %>" foreign-source="<%= @foreign_source %>">
  <% else -%>
	retries="<%= @retries %>" timeout="<%= @timeout %>">
  <% end -%>

    <!-- see examples/discovery-configuration.xml for options
    <include-range>
        <begin>192.168.0.1</begin>
        <end>192.168.0.254</end>
    </include-range>
    -->

</discovery-configuration>
